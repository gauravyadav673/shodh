extends layout

block content
  <!-- name= name -->
  div.card.border-light.mb-3.shadowed.mt-4.mb-4
    div.card-header.font-weight-bold Add Reasearch Project
    div.text-dark.card-body.px-5
      <!-- h5(class="card-title") card -->
      form.w-100(action="/data/project" method="post")
        div.form-group
          label(for="name") Project Name
          input(type="text" required name="projectName").form-control#name
        div.form-group
          label(for="sponsor") Sponsor
          input(type="text" name="sponsor" required).form-control#sponsor
        div.form-group
          label(for="grant") Grant
          input(type="text" name="grant" required).form-control#grant
        div.form-group
          label(for="description") Description
          input(type="text" name="description" required).form-control#venue
        div.form-group
          label(for="startDate") Start Date
          input(type="date" name="startDate" required).form-control#startDate
        div.form-group
          label(for="endDate") End Date
          input(type="date" name="endDate" required).form-control#endDate
        div.form-group.d-none
          input(type="text" name="userName" value= name required).form-control
        div.form-group
          input(type="submit" value="Submit").btn.btn-info.form-control
        
