extends layout

block content
    h2.page-header Login
    p Login below
    form(method='post', action='/users/login')
        .form-group
            label Username
            input.form-control(name='username', type='text', placeholder='Enter Username here')
        .form-group
            label Password
            input.form-control(name='password', type='password', placeholder='Enter Password here')
        input.btn.btn-primary(name='submit', value='Login', type='submit')